<Window x:Class="Bowling_Challenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bowling_Challenge"
        mc:Ignorable="d"
        Title="Bowling Challenge" Height="190" Width="425">
    <Grid Background="#FFD1D1D1">
        <Button x:Name="RandomRollBtn" Content="Random" Click="randomRoll" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="GutterBtn" Content="Gutter" Click="gutterRoll" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="SpareBtn" Content="Spare" Click="spareRoll" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="StrikeBtn" Content="Strike" Click="strikeRoll" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="55"/>
        <Button x:Name="SpecificRollBtn" Content="Hit X pins" Click="specificRoll" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Scoreboard" Content="Label" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" Height="120" Width="345"/>
    </Grid>
</Window>
